<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jh.buildings">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="历史建筑"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".Activity.BuildingStyleImageDisplay"></activity>

        <activity android:name=".Activity.MainPageActivity"
            android:windowSoftInputMode="stateHidden|adjustPan"
            >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.ImageDisplay" />
        <activity
            android:name=".Activity.Literature"
            android:label="@string/title_activity_literature"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activity.Street" />
        <activity android:name=".Activity.Designer" />
        <activity
            android:name=".Activity.Associated_people"
            android:label="@string/title_activity_associated_people"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.Style"
            android:label="@string/title_activity_style"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.Unit"
            android:label="@string/title_activity_unit"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.MainActivity"
            android:label=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activity.UseChange" />
        <activity
            android:name=".Activity.Vedio"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait" />
    </application>

</manifest>