<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/BottomNavigationViewer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/MainPageBottomNavigationBarHeight"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navigation_menu"></android.support.design.widget.BottomNavigationView>

    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/BottomNavigationViewer"
        ></FrameLayout>

</RelativeLayout>